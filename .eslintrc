{
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/dev.js"
      }
    }
  },
  "rules": {
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "camelcase": 0,
    "new-cap": 0,
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "windows"
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": 0,
    "id-length": [
      2,
      {
        "min": 2,
        "exceptions": [
          "x",
          "v",
          "T",
          "_"
        ]
      }
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "classes": true,
    "modules": true
  },
  "plugins": [
    "react"
  ],
  "extends": "airbnb/base"
}
